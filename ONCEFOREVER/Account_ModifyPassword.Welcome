	FoundErr=True
	ErrMsg=ErrMsg &"<br /><li>帐号不能为空！</li>"
Else
	If CokeShow.strLength(username)>50 Or CokeShow.strLength(username)<10 Then
		FoundErr=True
		ErrMsg=ErrMsg &"<br /><li>您的Email帐号长度不应大于50个字符，也不应小于10个字符的！请填写您的正确Email地址以方便我们和您取得联系.</li>"
	Else
